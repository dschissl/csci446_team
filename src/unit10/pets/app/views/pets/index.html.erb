  <tbody>
    <% @pets.each do |pet| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(pet.image_url, class: 'list_image') %> 
        </td>

        <td class="list_description"> 
          <dl>
            <dt><%= pet.name %> (<%= pet.pet_type %>)</dt>
            <dd><%= truncate(strip_tags(pet.description), length: 80) %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', pet %><br/>
          <%= link_to 'Edit', edit_pet_path(pet) %>
          <br/> 
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

