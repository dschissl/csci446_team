<!DOCTYPE html>
<html>
<head>
  <title>Barter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="super">
	<div class="header">
		<h1> Super Barter System </h1>
	</div>
	<div class="sidebar">
		<%= link_to 'Avaliable Items', items_url %>
		<%= link_to 'Traded Items', items_url(type: "traded") %>
		<br />
		<br />
		<% if UserSession.current_user %>
			<span>Signed in as <%= UserSession.current_user.username %></span>
			<%= link_to 'My Items', items_url(type: "mine") %>
			<%= link_to 'My Offers', offers_url %>
			<br />
			<%= link_to 'Logout', logout_url %>
		<% else %>
			<%= link_to 'Register', register_url %>
			<%= link_to 'Login', login_url %>
		<% end %>
	</div>

	<div class="mainPanel <%= controller.controller_name %> <%= controller.action_name %>">
		<% if notice %>
  		<p id="notice"><%= notice %></p>
		<% end %>
	
		<%= yield %>
	</div>
</div>

</body>
</html>
