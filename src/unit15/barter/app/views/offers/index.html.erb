<h1>Recieved</h1>

<table>
  <thead>
    <tr>
      <th>For</th>
      <th>From User</th>
      <th>Message</th>
      <th>Offer Status</th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.item.description, offer %></td>
        <td><%= link_to offer.user.username, offer %></td>
        <td><%= link_to offer.message, offer %></td>
        <td><%= link_to offer.status, offer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

